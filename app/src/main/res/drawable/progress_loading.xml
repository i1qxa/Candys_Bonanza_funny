<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <stroke
                android:color="#FFEB37"
                android:width="5dp"
                />
            <corners android:radius="250dp" />
            <gradient
                android:startColor="#3D3D3D"
                android:centerY="0.75"
                android:endColor="#747474"
                android:angle="180"
                />
        </shape>
    </item>

    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <stroke
                    android:color="#00000000"
                    android:width="20dp"
                    />
                <corners
                    android:radius="250dp" />
                <gradient
                    android:startColor="#4FBF13"
                    android:endColor="#85D844"
                    android:angle="180" />
            </shape>
        </clip>
    </item>
</layer-list>